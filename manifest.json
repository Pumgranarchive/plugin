{
	"manifest_version": 2,
	
	"name": "Pumgrana",
	"description": "This extension allows you to add content to the Pumgrana web site",
	"version": "1.0",
	
	"background": {
    "scripts": ["eventPage.js"],
	"persistant": "true"
	},
	
	"content_scripts": [
    {
      "matches": ["http://*/*"],
      "exclude_matches": ["*://mail.google.com/*", "https://*.google.com/"],
	  "css": ["css/Plugin.css"],
      "js": ["jquery-1.9.1.js", "Insert_Extension.js"]
    }
  ],
	
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
	
	 "permissions": [ "tabs",
    "activeTab", "storage"
	],
	
	"browser_action": {
    "default_icon": "Pumgrana_Icon.png",
    "default_popup": "popup.html"
  },
  
  "web_accessible_resources": [
    "Loading_Plugin.gif",
    "RefreshButtonIcon.png",
    "StormToWebGui.png"
  ]
}