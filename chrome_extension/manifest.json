{
	"manifest_version": 2,
	"name": "Pumgrana",
	"description": "This extension allows you to add content to the Pumgrana website",
	"version": "0.3.8",
	"background": {
        "persistant": "true"
	},
	"content_scripts": [{
        "matches": ["http://*/*", "https://*/*"],
        "exclude_matches": ["*://mail.google.com/*", "https://*.google.com/"],
        "css": ["style.css"],
        "js": ["app.js"],
		"run_at": "document_start"
    }],
	"content_security_policy":
        "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "permissions": ["tabs", "activeTab", "storage"],
	"browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "web_accessible_resources": []
}
