{
	"manifest_version": 2,
	"name": "Pumgrana",
	"description": "This extension allows you to add content to the Pumgrana website",
	"version": "1.0",
	"background": {
        "scripts": ["js/background.js"],
        "persistant": "true"
	},
	"content_scripts": [{
        "matches": ["http://*/*", "https://*/*"],
        "exclude_matches": ["*://mail.google.com/*", "https://*.google.com/"],
        "css": ["css/style.css", "css/woff.css"],
        "js": ["vendors/sprint/sprint.min.js", "js/app.js"]
    }],
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
        "permissions": [ "tabs", "activeTab", "storage"
	],
	"browser_action": {
        "default_icon": "img/icon.png",
        "default_popup": "popup.html"
    },
    "web_accessible_resources": [
        "img/logo.svg",
        "img/toogle.svg"
    ]
}